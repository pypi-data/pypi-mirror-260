{
    "name": "project_name",
    "root_dir": ".",
    "config_dir": "config/",
    "output_dir": "config_lua/",
    "copy_dir": "temp/",
    "groups": {
        "Constant": ["lua-list"],
        "Game": ["lua-list"],
        "Language": ["language-lua-map", "lua-column"]
    },
    "option_template": {
        "default": {
            "style": "lua-list",
            "suffix": ".lua.txt",
            "format_indent": 4,
            "format_depth": 1,
            "schema": "lua",
            "desc": "生成 *.lua.txt 文件\n样式为 list [data1, data2, ...]\nSchema 放在文件内\n拷贝到 {output_dir} 文件夹中"
        },
        "lua-list": {
            "style": "lua-list",
            "suffix": ".lua.txt",
            "format_indent": 4,
            "format_depth": 1,
            "schema": "lua",
            "desc": "生成 *.lua.txt 文件\n样式为 list [data1, data2, ...]\nSchema 放在文件内\n拷贝到 {output_dir} 文件夹中"
        },
        "lua-map": {
            "style": "lua-map",
            "suffix": ".lua.txt",
            "format_indent": 4,
            "format_depth": 1,
            "schema": "lua",
            "desc": "生成 *.lua.txt 文件\n样式为 map {key1: data1, key2:data2}\nSchema 放在文件内\n拷贝到 {output_dir} 文件夹中"
        },
        "language-lua-map": {
            "style": "lua-map",
            "suffix": ".lua.txt",
            "format_indent": 4,
            "format_depth": 4,
            "schema": "lua",
            "output_dir": "config_lua_map/",
            "copy_dir": "temp/",
            "desc": "生成 *.lua.txt 文件\n样式为 map {key1: data1, key2:data2}\nSchema 放在文件内\n拷贝到 {output_dir} 文件夹中"
        },
        "lua-column": {
            "style": "lua-column",
            "suffix": ".lua.txt",
            "format_indent": 4,
            "format_depth": 1,
            "schema": "none",
            "desc": "生成 file_name_{key}.lua.txt 文件\n样式为 column 列数据的列表 []，一般用于拆分多语言文件\n不要数据 Schema\n拷贝到 {output_dir} 文件夹中"
        },
        "json-list": {
            "style": "json-list",
            "suffix": ".json",
            "format_indent": 4,
            "format_depth": 1,
            "schema": ".mts",
            "temp_dir": "config_json/",
            "desc": "生成 *.json 文件\n样式为 list [data1, data2, ...]\nSchema 放在 @types 文件夹内\n拷贝到 {output_dir} 文件夹中"
        },
        "json-map": {
            "style": "json-map",
            "suffix": ".json",
            "format_indent": 4,
            "format_depth": 1,
            "schema": ".mts",
            "temp_dir": "config_json/",
            "desc": "生成 *.json 文件\n样式为 map {key1: data1, key2:data2}\nSchema 放在 @types 文件夹内\n拷贝到 {output_dir} 文件夹中"
        },
        "json-column": {
            "style": "json-column",
            "suffix": ".json",
            "format_indent": 0,
            "format_depth": 1,
            "schema": "none",
            "temp_dir": "config_json/",
            "desc": "生成 file_name_{key}.json 文件\n样式为 column 列数据的列表 []，一般用于拆分多语言文件\n不要数据 Schema\n拷贝到 {output_dir} 文件夹中"
        }
    }
}
