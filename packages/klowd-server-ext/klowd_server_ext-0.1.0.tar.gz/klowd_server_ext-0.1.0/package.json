{
  "name": "klowd_server_ext",
  "version": "0.1.0",
  "description": "A JupyterLite server extension.",
  "keywords": [
    "jupyter",
    "jupyterlab",
    "jupyterlite",
    "jupyterlite-extension"
  ],
  "homepage": "https://github.com/github_username/klowd_server_ext",
  "bugs": {
    "url": "https://github.com/github_username/klowd_server_ext/issues"
  },
  "license": "BSD-3-Clause",
  "author": {
    "name": "KLOWD",
    "email": "me@test.com"
  },
  "files": [
    "lib/**/*.{d.ts,eot,gif,html,jpg,js,js.map,json,png,svg,woff2,ttf}",
    "style/**/*.{css,js,eot,gif,html,jpg,json,png,svg,woff2,ttf}"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/github_username/klowd_server_ext.git"
  },
  "scripts": {
    "build": "yarn build:lib && yarn build:labextension:dev",
    "build:prod": "yarn clean && yarn build:lib && yarn build:labextension",
    "build:labextension": "jupyter labextension build .",
    "build:labextension:dev": "jupyter labextension build --development True .",
    "build:lib": "tsc",
    "clean": "yarn clean:lib",
    "clean:lib": "rimraf lib tsconfig.tsbuildinfo",
    "clean:labextension": "rimraf klowd_server_ext/labextension",
    "clean:all": "yarn clean:lib && yarn clean:labextension && yarn clean:lintcache",
    "eslint": "yarn eslint:check --fix",
    "eslint:check": "eslint . --cache --ext .ts,.tsx",
    "install:extension": "yarn build",
    "lint": "yarn prettier && yarn eslint",
    "lint:check": "yarn prettier:check && yarn eslint:check",
    "prettier": "yarn prettier:base --write --list-different",
    "prettier:base": "prettier \"**/*{.ts,.tsx,.js,.jsx,.css,.json,.md}\"",
    "prettier:check": "yarn prettier:base --check",
    "py:pub": "yarn py:build && twine upload dist/*",
    "py:build": "python3 -m build --sdist && python3 -m build --wheel && twine check dist/*",
    "watch": "run-p watch:src watch:labextension",
    "watch:src": "tsc -w",
    "watch:labextension": "jupyter labextension watch ."
  },
  "dependencies": {
    "@jupyterlite/server": "^0.1.0-beta.15"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.0.0",
    "@jupyterlab/builder": "^4.1.2",
    "@typescript-eslint/eslint-plugin": "^4.8.1",
    "@typescript-eslint/parser": "^4.8.1",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.1",
    "rimraf": "^3.0.2",
    "typescript": "~4.1.3"
  },
  "sideEffects": [
    "style/*.css",
    "style/index.js"
  ],
  "styleModule": "style/index.js",
  "publishConfig": {
    "access": "public"
  },
  "jupyterlab": {
    "extension": true,
    "outputDir": "klowd_server_ext/labextension"
  },
  "jupyterlite": {
    "liteExtension": true
  },
  "jupyter-releaser": {
    "skip": ["check-links"],
    "hooks": {
      "before-build-npm": [
        "python -m pip install jupyterlab~=3.1",
        "yarn"
      ],
      "before-build-python": [
        "yarn clean:all"
      ]
    }
  }
}
